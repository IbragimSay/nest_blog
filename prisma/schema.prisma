generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  mail     String
  password String
  userName String
  tokens   Token[]
  roles    Role[]
}

model Token {
  token     String   @unique()
  exp       DateTime
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
  userAgent String
}

model Post {
  id     Int        @id @default(autoincrement())
  title  String
  texts  PostText[]
  images Images[]
}

model PostText {
  id     Int    @id @default(autoincrement())
  text   String
  order  Int
  Post   Post?  @relation(fields: [postId], references: [id])
  postId Int?
}

model Images {
  id      Int    @id @default(autoincrement())
  content String
  order   Int
  Post    Post?  @relation(fields: [postId], references: [id])
  postId  Int?
}

enum Role {
  Admin
  User
}
